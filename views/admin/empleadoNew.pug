extends ../layout
block content
  if(msg)
    .row.mx-auto
      .col-5.mx-auto.mt-4.text-center
        .alert.alert-info.alert-dismissible.fade.show(role='alert')
          strong #{msg} 
          button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close') X
  .row.mx-auto
    .col-5.mx-auto.my-4
      .card
        .card-body.p-4
          form(action="/admin/empleado" method="post")
            .form-group
              label(for="email") E-mail
              input.form-control#email(type="text" name="email" placeholder="E-mail", required)
            .form-group
              label(for="pass") Contraseña
              input.form-control#pass(type="password" name="pass" placeholder="Contraseña", required) 
            .form-group
              label(for="nombre") Nombre
              input.form-control#nombre(type="text" name="nombre" placeholder="Nombre", required)
            .form-group
              label(for="apellido") Apellido
              input.form-control#apellido(type="text" name="apellido" placeholder="Apellido", required)
            .form-group
              label(for="DNI") DNI
              input.form-control#dni(type="text" name="dni" placeholder="DNI", required)
            .form-group
              label(for="Teléfono") Teléfono
              input.form-control#telefono(type="text" name="telefono" placeholder="Teléfono", required)
            .form-group
              label(for="type") Área
              select.form-control#areaId(name="AreaId" required)
                  each a in areas
                    option(value=a.id) #{a.nombre}
            .form-check
              label.form-label(for="verificado") Habilitado
              br
              input.form-check-input#si(type="radio", name="verificado", value=1, checked)
              label.form-check-label(for="si") SÍ
              br
              input.form-check-input#no(type="radio", name="verificado", value=0)
              label.form-check-label(for="no") NO

            .form-group.text-center
              input.btn.btn-primary(type="submit" value="Registrar")