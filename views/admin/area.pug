extends ../layout
block content
  if(msg)
    .row.mx-auto
      .col-5.mx-auto.mt-4.text-center
        .alert.alert-info.alert-dismissible.fade.show(role='alert')
          strong #{msg} 
          button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close') X
  .row.mx-auto
    .col-5.mx-auto.my-4
      .card
        .card-body.p-4
          form(action="/admin/areas/"+area.id method="post")
            .form-check
              .form-group
                label(for="nombre") Nombre
                input.form-control#nombre(type="text" name="nombre" placeholder="Nombre", value=area.nombre required)
            .form-group.text-center
              input.btn.btn-primary(type="submit" value="Actualizar")