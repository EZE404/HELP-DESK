extends ../layout

block content
  if(msg)
    .row.mx-auto
      .col-5.mx-auto.mt-4.text-center
        .alert.alert-info.alert-dismissible.fade.show(role='alert')
          strong #{msg} 
          button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close') X
  .row.mx-auto
    .col-sm-4.mx-auto.my-4
      .card
        .card-body.p-4
          form#form(action="/login/signup" method="post" onsubmit="return validar()")
            .form-group
              label(for="nombre") Nombre
              input.form-control#nombre(type="text" name="nombre" placeholder="Nombre", required)
              span#testNombre
            .form-group
              label(for="DNI") DNI
              input.form-control#dni(type="text" name="dni" placeholder="DNI", required)
              span#testDni
            .form-group
              label(for="Teléfono") Teléfono
              input.form-control#telefono(type="text" name="telefono" placeholder="Teléfono" required)
              span#testTelefono
            .form-group
              label(for="email") Email
              input.form-control#email(type="email" name="email" placeholder="Email", required)
              span#testEmail
            .form-group
              label(for="password") Contraseña
              input.form-control#pass(type="password" name="pass" placeholder="Contraseña", required)
              span#testPass
            .form-group.text-center
              input.btn.btn-primary#submit(type="submit" value="Registrarse")
  script(src="/javascripts/signup.js")
